<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="1" author="smedina">
        <createTable tableName="chat_room">
            <column name="id" type="VARCHAR (36)">
                <constraints primaryKey="true"/>
            </column>
            <column name="display_name" type="VARCHAR (225)">
                <constraints unique="true"/>
            </column>
            <column name="description" type="VARCHAR (225)"/>
            <column name="admin_id" type="VARCHAR (36)"/>
        </createTable>
        <addForeignKeyConstraint
                baseTableName="chat_room"
                baseColumnNames="admin_id"
                referencedTableName="user"
                referencedColumnNames="id"
                constraintName="fk_chat_room_admin"
                onDelete="RESTRICT"
                onUpdate="CASCADE"/>
    </changeSet>

</databaseChangeLog>