<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="1" author="smedina">
        <createTable tableName="chat_message">
            <column name="id" type="VARCHAR (36)">
                <constraints primaryKey="true"/>
            </column>
            <column name="message" type="VARCHAR (8000)"/>
            <column name="user_id" type="VARCHAR (36)"/>
            <column name="chat_room_id" type="VARCHAR (36)"/>
            <column name="time_sent" type="TIMESTAMP"/>
        </createTable>
        <addForeignKeyConstraint
                baseTableName="chat_message"
                baseColumnNames="user_id"
                referencedTableName="user"
                referencedColumnNames="id"
                constraintName="fk_message_user_constraint"
                onDelete="RESTRICT"
                onUpdate="CASCADE"/>
        <addForeignKeyConstraint
                baseTableName="chat_message"
                baseColumnNames="chat_room_id"
                referencedTableName="chat_room"
                referencedColumnNames="id"
                constraintName="fk_message_room_constraint"
                onDelete="RESTRICT"
                onUpdate="CASCADE"/>
    </changeSet>
    <changeSet id="2" author="smedina">
        <createIndex indexName="idx_chat_message_chat_room_timestamp" tableName="chat_message">
            <column name="chat_room_id"/>
            <column name="time_sent"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>