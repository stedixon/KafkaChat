<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="1" author="smedina">
        <createTable tableName="user">
            <column name="id" type="VARCHAR (36)">
                <constraints primaryKey="true"/>
            </column>
            <column name="username" type="VARCHAR (225)" >
                <constraints unique="true"/>
            </column>
            <column name="first_name" type="VARCHAR (225)"/>
            <column name="last_name" type="VARCHAR (225)"/>
            <column name="email" type="VARCHAR (225)"/>
            <column name="chat_room_id" type="VARCHAR (36)"/>
        </createTable>
    </changeSet>

</databaseChangeLog>