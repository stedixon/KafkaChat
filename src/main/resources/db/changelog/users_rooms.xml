<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="1" author="smedina">
        <createTable tableName="room_management">
            <column name="user_id" type="VARCHAR (36)"/>
            <column name="chat_room_id" type="VARCHAR (36)"/>
        </createTable>
        <addPrimaryKey
                tableName="room_management"
                columnNames="user_id, chat_room_id"
                constraintName="pk_user_room"
        />
        <addForeignKeyConstraint
                baseTableName="room_management"
                baseColumnNames="user_id"
                referencedTableName="user"
                referencedColumnNames="id"
                constraintName="fk_chat_room_participant_list"
                onDelete="RESTRICT"
                onUpdate="CASCADE"/>
        <addForeignKeyConstraint
                baseTableName="room_management"
                baseColumnNames="chat_room_id"
                referencedTableName="chat_room"
                referencedColumnNames="id"
                constraintName="fk_chat_room_participant_details"
                onDelete="RESTRICT"
                onUpdate="CASCADE"/>
    </changeSet>

</databaseChangeLog>